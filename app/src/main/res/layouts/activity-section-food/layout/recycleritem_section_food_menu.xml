<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/recyclerItem_SectionFood_Menu_CardView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/holo_green_light"
                android:gravity="center"
                android:text="image" />

            <TextView
                android:id="@+id/recyclerItem_SectionFood_Menu_textView_MenuName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Ikan Bakar, Bakar Sendiri" />

            <TextView
                android:id="@+id/recyclerItem_SectionFood_Menu_textView_MenuPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Rp.100.000.000"
                android:textColor="@color/red_error" />

            <TextView
                android:id="@+id/recyclerItem_SectionFood_Menu_textView_Store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="end"
                android:paddingTop="5dp"
                android:text="Blessing Tondano" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>